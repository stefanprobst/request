{
  "name": "@stefanprobst/request",
  "version": "0.2.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./timeout": {
      "import": "./dist/timeout.js",
      "require": "./dist/cjs/timeout.js"
    },
    "./fetch": {
      "node": {
        "import": "./dist/fetch.js",
        "require": "./dist/cjs/fetch.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.dist.json",
    "build:cjs": "npm run build -- --module commonjs --outDir dist/cjs && sh scripts/fix-package-type.sh",
    "format": "prettier . --cache --check --ignore-path .gitignore",
    "format:fix": "npm run format -- --write",
    "prepare": "npm run setup",
    "prepublishOnly": "run-s validate build build:cjs",
    "setup": "simple-git-hooks || exit 0",
    "test": "uvu -r tsm test",
    "validate": "run-s format test"
  },
  "engines": {
    "node": ">=16"
  },
  "optionalDependencies": {
    "abort-controller": "^3.0.0",
    "form-data": "^4.0.0",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@stefanprobst/commitlint-config": "^1.0.2",
    "@stefanprobst/prettier-config": "^2.0.2",
    "@types/micro": "^7.3.7",
    "@types/node": "^16.11.63",
    "abort-controller": "^3.0.0",
    "cross-env": "^7.0.3",
    "form-data": "^4.0.0",
    "lint-staged": "^13.0.3",
    "micro": "^9.4.1",
    "node-fetch": "^3.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "tsm": "^2.2.2",
    "typescript": "^4.8.4",
    "uvu": "^0.5.6"
  },
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "lint-staged": {
    "*.@(js|ts)": [
      "prettier --write"
    ]
  },
  "prettier": "@stefanprobst/prettier-config",
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run validate"
  }
}
